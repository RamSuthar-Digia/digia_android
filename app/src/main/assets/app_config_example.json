{
    "appSettings": {
        "initialRoute": "home",
        "appName": "Digia UI Demo",
        "version": "1.0.0"
    },
    "theme": {
        "colors": {
            "light": {
                "primary": "#6200EE",
                "onPrimary": "#FFFFFF",
                "primaryContainer": "#BB86FC",
                "onPrimaryContainer": "#000000",
                "secondary": "#03DAC6",
                "onSecondary": "#000000",
                "secondaryContainer": "#018786",
                "onSecondaryContainer": "#FFFFFF",
                "tertiary": "#FF0266",
                "onTertiary": "#FFFFFF",
                "tertiaryContainer": "#FF5995",
                "onTertiaryContainer": "#000000",
                "error": "#B00020",
                "onError": "#FFFFFF",
                "errorContainer": "#F9DEDC",
                "onErrorContainer": "#410E0B",
                "background": "#FFFFFF",
                "onBackground": "#000000",
                "surface": "#FFFFFF",
                "onSurface": "#000000",
                "surfaceVariant": "#F5F5F5",
                "onSurfaceVariant": "#666666",
                "outline": "#CCCCCC",
                "outlineVariant": "#E0E0E0",
                "scrim": "#000000"
            },
            "dark": {
                "primary": "#BB86FC",
                "onPrimary": "#000000",
                "primaryContainer": "#3700B3",
                "onPrimaryContainer": "#FFFFFF",
                "secondary": "#03DAC6",
                "onSecondary": "#000000",
                "secondaryContainer": "#005F56",
                "onSecondaryContainer": "#FFFFFF",
                "tertiary": "#FF5995",
                "onTertiary": "#000000",
                "tertiaryContainer": "#CC004E",
                "onTertiaryContainer": "#FFFFFF",
                "error": "#CF6679",
                "onError": "#000000",
                "errorContainer": "#93000A",
                "onErrorContainer": "#FFDAD6",
                "background": "#121212",
                "onBackground": "#FFFFFF",
                "surface": "#121212",
                "onSurface": "#FFFFFF",
                "surfaceVariant": "#1E1E1E",
                "onSurfaceVariant": "#CCCCCC",
                "outline": "#555555",
                "outlineVariant": "#333333",
                "scrim": "#000000"
            }
        },
        "fonts": {
            "displayLarge": {
                "fontSize": 57,
                "fontWeight": "normal",
                "lineHeight": 64
            },
            "displayMedium": {
                "fontSize": 45,
                "fontWeight": "normal",
                "lineHeight": 52
            },
            "displaySmall": {
                "fontSize": 36,
                "fontWeight": "normal",
                "lineHeight": 44
            },
            "headlineLarge": {
                "fontSize": 32,
                "fontWeight": "normal",
                "lineHeight": 40
            },
            "headlineMedium": {
                "fontSize": 28,
                "fontWeight": "normal",
                "lineHeight": 36
            },
            "headlineSmall": {
                "fontSize": 24,
                "fontWeight": "normal",
                "lineHeight": 32
            },
            "bodyLarge": {
                "fontSize": 16,
                "fontWeight": "normal",
                "lineHeight": 24
            },
            "bodyMedium": {
                "fontSize": 14,
                "fontWeight": "normal",
                "lineHeight": 20
            },
            "bodySmall": {
                "fontSize": 12,
                "fontWeight": "normal",
                "lineHeight": 16
            }
        }
    },
    "pages": {
        "home": {
            "title": "Home",
            "route": "home",
            "appBar": {
                "title": "Digia UI Demo",
                "showBackButton": false,
                "elevation": 0,
                "actions": []
            },
            "layout": {
                "type": "Column",
                "properties": {
                    "padding": 16,
                    "spacing": 16
                },
                "children": [
                    {
                        "type": "Text",
                        "properties": {
                            "text": "Welcome to Digia UI",
                            "style": "headlineLarge",
                            "color": "primary"
                        }
                    },
                    {
                        "type": "Text",
                        "properties": {
                            "text": "This is a server-driven UI framework for Android Compose",
                            "style": "bodyMedium"
                        }
                    },
                    {
                        "type": "Card",
                        "properties": {
                            "elevation": 2,
                            "padding": 16
                        },
                        "children": [
                            {
                                "type": "Column",
                                "children": [
                                    {
                                        "type": "Text",
                                        "properties": {
                                            "text": "Features",
                                            "style": "titleMedium"
                                        }
                                    },
                                    {
                                        "type": "Text",
                                        "properties": {
                                            "text": "• Dynamic theming\n• Navigation\n• State management\n• API integration\n• Event handling",
                                            "style": "bodyMedium"
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Button",
                        "properties": {
                            "text": "View Details",
                            "variant": "filled"
                        },
                        "events": {
                            "onClick": [
                                {
                                    "type": "navigate",
                                    "route": "details",
                                    "params": {
                                        "title": "Details Page"
                                    }
                                },
                                {
                                    "type": "analytics",
                                    "event": "button_click",
                                    "properties": {
                                        "button_id": "view_details",
                                        "page": "home"
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            "onLoad": [
                {
                    "type": "analytics",
                    "event": "screen_view",
                    "properties": {
                        "screen_name": "home"
                    }
                }
            ]
        },
        "details": {
            "title": "Details",
            "route": "details",
            "appBar": {
                "title": "Details",
                "showBackButton": true,
                "elevation": 2
            },
            "layout": {
                "type": "Column",
                "properties": {
                    "padding": 16,
                    "spacing": 12
                },
                "children": [
                    {
                        "type": "Text",
                        "properties": {
                            "text": "Details Page",
                            "style": "headlineMedium"
                        }
                    },
                    {
                        "type": "Text",
                        "properties": {
                            "text": "This page demonstrates navigation and state management.",
                            "style": "bodyMedium"
                        }
                    },
                    {
                        "type": "TextField",
                        "id": "usernameField",
                        "properties": {
                            "label": "Username",
                            "placeholder": "Enter your username"
                        },
                        "validation": {
                            "rules": [
                                {
                                    "type": "required",
                                    "message": "Username is required"
                                },
                                {
                                    "type": "minLength",
                                    "value": 3,
                                    "message": "Username must be at least 3 characters"
                                }
                            ]
                        }
                    },
                    {
                        "type": "Button",
                        "properties": {
                            "text": "Save",
                            "variant": "filled"
                        },
                        "events": {
                            "onClick": [
                                {
                                    "type": "setState",
                                    "key": "username",
                                    "value": "@{usernameField.value}"
                                },
                                {
                                    "type": "showSnackbar",
                                    "message": "Username saved!"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    },
    "rest": {
        "defaultHeaders": {
            "Content-Type": "application/json",
            "Accept": "application/json"
        },
        "resources": {
            "userApi": {
                "baseUrl": "https://jsonplaceholder.typicode.com",
                "timeout": 30,
                "endpoints": {
                    "getUsers": {
                        "path": "/users",
                        "method": "GET"
                    },
                    "getUser": {
                        "path": "/users/{id}",
                        "method": "GET"
                    },
                    "createUser": {
                        "path": "/users",
                        "method": "POST"
                    },
                    "updateUser": {
                        "path": "/users/{id}",
                        "method": "PUT"
                    },
                    "deleteUser": {
                        "path": "/users/{id}",
                        "method": "DELETE"
                    }
                }
            },
            "postsApi": {
                "baseUrl": "https://jsonplaceholder.typicode.com",
                "endpoints": {
                    "getPosts": {
                        "path": "/posts",
                        "method": "GET"
                    },
                    "getPost": {
                        "path": "/posts/{id}",
                        "method": "GET"
                    }
                }
            }
        }
    },
    "appState": [
        {
            "key": "currentUser",
            "initialValue": null
        },
        {
            "key": "theme",
            "initialValue": "light"
        },
        {
            "key": "isLoggedIn",
            "initialValue": false
        }
    ],
    "environment": {
        "variables": {
            "API_KEY": "demo-api-key-12345",
            "ENV": "development",
            "DEBUG": true
        }
    },
    "version": 1,
    "versionUpdated": false
}